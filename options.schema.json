{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "options": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "value": { "type": "string" },
          "description": { "type": "string" },
          "recommendation_order": { "type": "integer" }
        },
        "required": ["value", "description", "recommendation_order"]
      }
    }
  },
  "required": ["options"]
}
